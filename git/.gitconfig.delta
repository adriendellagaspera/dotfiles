[pager]
	diff = delta
	log = delta
	reflog = delta
	show = delta

[delta]
	features = side-by-side line-numbers decorations
	navigate = true
	syntax-theme = OneHalfLight

[delta "decorations"]
	commit-decoration-style = bold yellow box
	file-style = bold blue ul
	file-decoration-style = none

[interactive]
	diffFilter = delta --color-only
